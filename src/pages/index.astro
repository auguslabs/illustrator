import BaseLayout from '@/layouts/BaseLayout.astro';
import { Card, Button, Input } from '@/components/ui';
import { Container } from '@/components/layout';
import { mockUsers, mockProducts } from '@/data/mock';
import { formatCurrency } from '@/utils';

// Ejemplo de uso de datos de la capa de datos
const users = mockUsers;
const products = mockProducts;
---

<BaseLayout title="Inicio - Mi Aplicaci贸n">
  <Container className="py-12">
    <div class="space-y-8">
      <!-- Hero Section -->
      <section class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Bienvenido a la Plantilla Base
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Astro + React + Tailwind CSS con arquitectura por capas
        </p>
        <div class="flex justify-center gap-4">
          <Button variant="primary" size="lg" client:load>
            Comenzar
          </Button>
          <Button variant="outline" size="lg" client:load>
            Aprender m谩s
          </Button>
        </div>
      </section>

      <!-- Ejemplo de uso de componentes React -->
      <section>
        <h2 class="text-2xl font-semibold mb-6">Componentes UI</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <Card title="Tarjeta Ejemplo" client:load>
            <p class="text-gray-600 mb-4">
              Este es un ejemplo de c贸mo usar el componente Card.
            </p>
            <Button variant="primary" size="sm" client:load>
              Acci贸n
            </Button>
          </Card>

          <Card title="Formulario" client:load>
            <form class="space-y-4">
              <Input
                label="Nombre"
                type="text"
                placeholder="Ingresa tu nombre"
                client:load
              />
              <Input
                label="Email"
                type="email"
                placeholder="tu@email.com"
                client:load
              />
              <Button variant="primary" size="md" type="submit" client:load>
                Enviar
              </Button>
            </form>
          </Card>

          <Card title="Informaci贸n" client:load>
            <p class="text-gray-600">
              Los componentes React se cargan con <code class="bg-gray-100 px-2 py-1 rounded">client:load</code>
            </p>
          </Card>
        </div>
      </section>

      <!-- Ejemplo de uso de datos -->
      <section>
        <h2 class="text-2xl font-semibold mb-6">Datos de Ejemplo</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <Card title="Usuarios" client:load>
            <ul class="space-y-2">
              {users.map((user) => (
                <li class="flex items-center gap-3">
                  {user.avatar && (
                    <img
                      src={user.avatar}
                      alt={user.name}
                      class="w-10 h-10 rounded-full"
                    />
                  )}
                  <div>
                    <p class="font-medium">{user.name}</p>
                    <p class="text-sm text-gray-500">{user.email}</p>
                  </div>
                </li>
              ))}
            </ul>
          </Card>

          <Card title="Productos" client:load>
            <ul class="space-y-3">
              {products.map((product) => (
                <li class="flex justify-between items-center">
                  <div>
                    <p class="font-medium">{product.name}</p>
                    <p class="text-sm text-gray-500">{product.category}</p>
                  </div>
                  <p class="font-semibold text-primary-600">
                    {formatCurrency(product.price)}
                  </p>
                </li>
              ))}
            </ul>
          </Card>
        </div>
      </section>

      <!-- Informaci贸n sobre la arquitectura -->
      <section>
        <Card title="Arquitectura por Capas" client:load>
          <div class="space-y-4">
            <div>
              <h3 class="font-semibold text-lg mb-2"> Capa de Datos</h3>
              <p class="text-gray-600">
                <code class="bg-gray-100 px-2 py-1 rounded">src/data/</code> - Modelos y datos mock
              </p>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-2"> Capa de Servicios</h3>
              <p class="text-gray-600">
